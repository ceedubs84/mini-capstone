<h1>Edit Product</h1>
<%= form_tag "/products/#{@product.name}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, class: 'form-control' %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: 'form-control' %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image, class: 'form-control' %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: 'form-control' %>
  </div>
  <%= submit_tag "Edit Product", class: "btn btn-primary" %>
<% end %>

<div>
  <a href="/products">Back to Home</a>
</div>
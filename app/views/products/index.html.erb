<h2>All Products</h2>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="well">
        <h2><a href="/products/<%= product.id %>"><%= product.name %></a></h2>
        <p>Price/kilo: <%= product.dollar_price %></p>
        <p>Total price: <%= product.total %></p>
        <div>
          <% if product.sale_message == "Discount Item!" %>
            <h3 style=color:red><strong><%= product.sale_message %></strong></h3>
          <% else %>
            <strong><%= product.sale_message %></strong>
          <% end %>  
        </div>
        <img src="<%= product.image %>">
        <p><%= product.description %></p>
      </div>  
    </div>  
  <% end %>
</div>
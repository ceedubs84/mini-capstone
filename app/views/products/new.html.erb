<h1>New Product</h1>
<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: 'form-control' %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class: 'form-control' %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, nil, class: 'form-control' %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, nil , class: 'form-control' %>
  </div>
  <%= submit_tag "Add product", class: "btn btn-primary" %>
<% end %>
<h1>Create a New Product</h1>
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product ? @product.name : "" %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product ? @product.price : ""  %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @product && @product.images.first ? @product.images.first.url : "" %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product ? @product.description : ""  %>
  </div>
  <%= submit_tag "Create!" %>
<% end %>

<div>
  <a href="/products">Back to Home</a>
</div>
<h1>Product Info</h1>
<div class="row">
  <div class="col-md-8">
    <h2><%= @product.name %></h2>
    <img src= "<%= @product.images.first.url %>">
  </div>  
  <div class="col-md-4">
    <div>
      <p>Price/kilo: <%= number_to_currency(@product.price) %></p>
      <p>Total w/tax: <%= number_to_currency(@product.total) %></p>
      <div>
          <% if @product.sale_message == "Discount Item!" %>
            <h3 style=color:red><strong><%= @product.sale_message %></strong></h3>
          <% else %>
            <strong><%= @product.sale_message %></strong>
          <% end %>  
        </div>
      <p><%= @product.description %></p>
    </div>
  </div>  
<div>
  <a class="btn btn-success" href="/products/<%= @product.id %>/edit" role="button">Edit Product</a>
</div>
<div>
  <%= link_to "Destroy this Product", "/products/#{@product.id}", method: :delete %>
</div>
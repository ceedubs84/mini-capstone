<h1>Product Info</h1>
<div class="row">
  <div class="col-md-8">
    <h2><%= @product.name %></h2>
    <img src= "<%= @product.image %>">
  </div>  
  <div class="col-md-4">
    <div>
      <p><%= @product.dollar_price %></p>
      <p><%= @product.description %></p>
    </div>
  </div>  
<div>
  <a class="btn btn-success" href="/products/<%= @product.id %>/edit" role="button">Edit Product</a>
</div>
<div>
  <%= link_to "Destroy this Product", "/products/#{@product.id}", method: :delete %>
</div>